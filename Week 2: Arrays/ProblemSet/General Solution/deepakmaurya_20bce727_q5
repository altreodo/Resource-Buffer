#include <iostream>
#include <bits/stdc++.h>
using namespace std;

int main()
{
    int t; //test cases
    cin >> t;
    while (t--)
    {
        int size, count = 0; //size of array
        cin >> size;
        int array[size];
        for (int i = 0; i < size; i++)
        {
            cin >> array[i];
        }
        sort(array, array + size);
        for (int y = 0; y < size; y++)
        {
            if (array[y] == array[y + 1])
            {
                count++;
            }
        }
        if (count % 2 != 0)
        {
            cout << (count + 1) / 2 << endl;
        }
        if(count%2==0 & count!=0)
        {
            cout << (count / 2) + 1 << endl;
        }else{
            cout<<0<<endl;
        }
    }
    return 0;
}
