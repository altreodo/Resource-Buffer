#include <iostream>
#include <math.h>
using namespace std;
int main() {
    int x,y,z;
    cin>>x>>y>>z;
    int num=x-y;
    if(num+z>0 & num-z>0){
        cout<<"+"<<endl;
    }else if(num+z<0 & num-z<0){
        cout<<"-"<<endl;
    }else if(num+z==0 &num-z==0){
        cout<<"0";
    }else{
        cout<<"?"<<endl;
    }
    return 0;
    
}
